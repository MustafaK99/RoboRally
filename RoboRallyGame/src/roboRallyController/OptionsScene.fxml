<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER_LEFT" spacing="15.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="80.0" AnchorPane.rightAnchor="80.0" AnchorPane.topAnchor="50.0">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <Label text="Options" textFill="WHITE">
                     <font>
                        <Font name="Century Gothic" size="55.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="25.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <Label text="Player File (.prg):" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="-10.0" />
               </VBox.margin>
               <font>
                  <Font name="Century Gothic" size="16.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <TextField fx:id="txtPrgFile" prefWidth="350.0" />
                  <Button minHeight="35.0" mnemonicParsing="false" onAction="#prgFilePressed" prefWidth="120.0" styleClass="rounded2" stylesheets="@../../Assets/css/main.css" text="Browse..." textFill="WHITE">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font name="Century Gothic" size="13.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <Label text="Board File (.brd):" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="-10.0" top="18.0" />
               </VBox.margin>
               <font>
                  <Font name="Century Gothic" size="16.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <TextField fx:id="txtBrdFile" prefWidth="350.0" />
                  <Button minHeight="35.0" mnemonicParsing="false" onAction="#brdFilePressed" prefWidth="120.0" styleClass="rounded2" stylesheets="@../../Assets/css/main.css" text="Browse..." textFill="WHITE">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font name="Century Gothic" size="13.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <VBox alignment="CENTER">
               <children>
                  <Button fx:id="playPressed" mnemonicParsing="false" onAction="#playPressed" prefWidth="400.0" styleClass="rounded2" stylesheets="@../../Assets/css/main.css" text="Play" textFill="WHITE">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                     <font>
                        <Font name="Century Gothic" size="18.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="18.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
